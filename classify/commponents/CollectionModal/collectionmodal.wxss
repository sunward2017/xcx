.container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.9);
    color: #fff;
}

.arrow {
    position: absolute;
    top: 10px;
    right: 60px;
    width: 80px;
    height: 80px;
}

.dot-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 100px 30px 0;
}

.dot {
    width: 30px;
    height: 26px;
    margin-left: 20px;
}

.text-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 20px;
}

.myapp-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 20px;
}

.myapp {
    width: 200px;
    height: 200px;
}