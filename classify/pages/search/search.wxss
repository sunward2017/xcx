page {
    height: 100%;
}

.container {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 40rpx;
}

.search-section {

    display: flex;
    flex-direction: row;
    align-items: center;
    height: 96rpx;
    width: 600rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    line-height: 96rpx;
    margin: 30rpx 0;
    border: 1px #53a1e2 solid;
    border-radius: 30rpx;
    overflow: hidden;
}

.search-input {
    flex: 1;
    height: 100%;
}

.search-btn {
    height: 110%;
    color: #01aa67;
    font-weight: bold;
    font-size: 18px;
}

.search-clear {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
}

.results-section {
    flex: 1;
    width: 100%;
    height: 200px;
    box-sizing: border-box;
    padding: 30rpx;
}

.hot-title {
    font-weight: bold;
    font-size: 18px;
    color: #000;
}

.hot-tag-wrapper {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    align-content: space-around;
    word-wrap: break-word;
}

.hot-tag-cell {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 20px;
    padding: 5px 12px;
    margin: 10px 10px 0 0;
    border-radius: 20px;
    background-color: #eee;
}

.hot-icon {
    width: 18px;
    height: 18px;
}

.hot-tag {
    color: #0e0e0e;
    font-size: 16px;
    line-height: 20px;
}

.local-wrapper {
    overflow: hidden;
    margin-top: 20px;
}

.local-title {
    font-weight: bold;
    font-size: 18px;
    color: #000;
    line-height: 20px;
}

.local-clear {
    margin-left: 20px;
    font-size: 16px;
    line-height: 24px;
    color: #757575;
}

.cell {
    display: flex;
    align-items: center;
    height: 44px;
    box-sizing: border-box;
    padding: 0 30rpx;
    line-height: 44px;
    border-top: 1px solid #eee;
    font-size: 40rpx;
}

.cell-content {
    flex: 1;
}

.cell-arrow {
    width: 10px;
    height: 10px;
    border-top: 2px solid;
    border-right: 2px solid;
    border-color: rgb(157,157,156);
    transform: rotate(45deg);
}

.cell-type {
    margin-right: 20px;
    color: #757575;
    font-size: 32rpx;
}

.no-result-tip {
    text-align: center;
}

.voice-wrapper {
    display: flex;
    align-items: center;
    width: 96rpx;
    height: 48px;
    box-sizing: border-box;
}

.voice-img {
    width: 96rpx;
    height: 32px;
}