 page {
    height: 100%;
}
.container {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 40rpx;
}
.search-section {
    margin-top:30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 96rpx;
    width: 600rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    line-height: 96rpx;
    margin-bottom: 20rpx;
    border: 1px #53a1e2 solid;
    border-radius: 30rpx;
    overflow: hidden;
}
.hint{
  position:absolute;
  top:110rpx;
  right:30rpx;
  font-size:30rpx;
  color:rgb(102, 102, 102);
  border:2rpx solid rgb(168, 224, 220);
  height:60rpx;
  line-height:60rpx;
  border-radius: 20rpx;
  padding:0 10rpx;
  background:#fff;
  animation: rotate 1s linear infinite;
}
@keyframes rotate {
    0% {
    transform: translateY(0) ;
  }
    25% {
        transform: translateY(10rpx);
    }
    50% {
        transform: translateY(20rpx);
       
    }
    75% {
        transform: translateY(10rpx) ;
    }
    100% {
        transform: translateY(0) ;
    }
}
.hint:before, .hint:after {
    content: "";
    border-width: 12rpx;
    position: absolute;
    left: 30rpx;
    top:-22rpx;
    border-style: solid dashed dashed;
    border-color: transparent transparent #A8E0DC  transparent;
}
.search-icon {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
}

.search-text {
    flex: 1;
    color: #757575;
}

.content-section {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx 30rpx;
}

.image-wrapper {
    width: 100%;
    display: flex;
    background-color: #fff;
    justify-content: center;
}

.icon-wapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 330rpx;
    height: 330rpx;
    border-radius: 20rpx;
    margin: 4rpx;
    color: #fff;
    text-align: center;
}

.cn-desc {
    margin-top: 24rpx;
    line-height: 16px;
    font-size: 36rpx;
}

.en-desc {
    margin-top: 10rpx;
    font-size: 18rpx;
}

.image-wrapper image {
   width:100%;
   height:100%;
}
 
.foot-section {
    box-sizing: border-box;
    padding: 30rpx 60rpx 0;
    font-size: 12px;
}

.share-section {
    flex: 1;
    display: flex;
    justify-content: center;
    width: 600rpx;
}

.btn-item {
    padding: 0;
    margin: 0;
    line-height: inherit;
    text-align: center;
    color: #fff;
    font-size:35rpx;
    font-family: '宋体';
}

button::after {
    border: none;
}

.share {
    width: 400rpx;
    margin-top:30rpx;
    height: 60rpx;
    margin-right: 20rpx;
    line-height: 60rpx;
    border-radius:100%;
